<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.6;net461</TargetFrameworks>
    <VersionPrefix>1.5.0</VersionPrefix>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|netstandard1.6|AnyCPU'">
    <LangVersion>7</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Include="App.config" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Common\NetFusion.Common\NetFusion.Common.csproj" />
    <ProjectReference Include="..\..\Core\NetFusion.Bootstrap\NetFusion.Bootstrap.csproj" />
    <ProjectReference Include="..\..\Core\NetFusion.Settings\NetFusion.Settings.csproj" />
    <ProjectReference Include="..\..\Infrastructure\NetFusion.MongoDB\NetFusion.MongoDB.csproj" />
    <ProjectReference Include="..\..\Infrastructure\NetFusion.RabbitMQ\NetFusion.RabbitMQ.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="System.ValueTuple" Version="4.3.1" />  
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net461' ">
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>

  <PropertyGroup>
  	<PackageId>NetFusion.RabbitMQ.MongoDB</PackageId>
	<Title>NetFusion RabbitMQ MongoDB Integration Plug-In</Title>
    <Description>Plug-In providing MongoDB implementations for storing RabbitMQ specific meta data.</Description>
	<PackageTags>netfusion;plugin;rabbitmq;mongodb</PackageTags>
  </PropertyGroup>
</Project>